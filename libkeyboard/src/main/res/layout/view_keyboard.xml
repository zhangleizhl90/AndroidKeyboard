        <ImageView android:id="@+id/btn_del"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:gravity="center"
            android:layout_marginLeft="14dp"
            android:layout_marginStart="14dp"
            android:padding="10dp"
            android:background="@drawable/key_background_light_sel"
            android:src="@drawable/del"/>

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_marginTop="10dp"
        android:orientation="horizontal">

        <TextView android:id="@+id/btn_change"
            android:layout_width="90dp"
            android:layout_height="match_parent"
            android:gravity="center"
            android:textColor="@color/key_dark_color"
            android:textSize="16sp"
            android:background="@drawable/key_background_light_sel"
            android:text="123"/>

        <FrameLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/key_background_sel"
            android:layout_marginLeft="4dp"
            android:layout_marginStart="4dp">

            <TextView android:id="@+id/btn_space"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:textColor="@color/white"
                android:gravity="center"
                android:textSize="16sp"
                android:text="@string/key_space"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#bfc5d1"
                android:textSize="10sp"
                android:layout_gravity="right|bottom"
                android:layout_marginBottom="4dp"
                android:layout_marginRight="4dp"
                android:text="@string/keyboard_name"/>

        </FrameLayout>

        <TextView android:id="@+id/btn_finish"
            android:layout_width="90dp"
            android:layout_height="match_parent"
            android:gravity="center"
            android:textSize="16sp"
            android:textColor="@color/key_dark_color"
            android:background="@drawable/key_background_light_sel"
            android:layout_marginLeft="4dp"
            android:layout_marginStart="4dp"
            android:text="@string/key_finish"/>

    </LinearLayout>

</LinearLayout>