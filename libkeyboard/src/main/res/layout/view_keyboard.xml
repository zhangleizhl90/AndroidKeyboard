            android:background="@drawable/key_background_sel"
            android:layout_marginLeft="4dp"
            android:layout_marginStart="4dp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_marginTop="10dp"
        android:orientation="horizontal">

        <FrameLayout
            android:id="@+id/btn_shift"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:layout_marginRight="14dp"
            android:layout_marginEnd="14dp"
            android:gravity="center">
            <TextView
                android:id="@+id/tv_num_symbol"
                android:textColor="@color/key_dark_color"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:textSize="16sp"
                android:gravity="center"
                android:background="@drawable/key_background_light_sel"/>
            <ImageView
                android:id="@+id/iv_shift"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:padding="10dp"
                android:background="@drawable/key_background_light_sel"
                android:src="@drawable/shift_off"
                android:contentDescription="@null" />
        </FrameLayout>

        <TextView android:id="@+id/btn_20"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:textColor="@color/white"
            android:textSize="23sp"
            android:background="@drawable/key_background_sel"
            android:layout_marginLeft="4dp"
            android:layout_marginStart="4dp"/>

        <TextView android:id="@+id/btn_21"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
